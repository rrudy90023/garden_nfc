    <script type="text/javascript">
        document.addEventListener("DOMContentLoaded", function() {
          //sticky header
          window.onscroll = function() {myFunction()};
          // Get the header
          var header = document.getElementById("myHeader");
          var spiderImg = document.getElementById("spiderImg");
          var hopperImg = document.getElementById("hopperImg");
          var ladyImg = document.getElementById("ladyImg");
          var catImg = document.getElementById("catImg");
          // Get the offset position of the navbar
          var sticky = header.offsetTop;
          // Add the sticky class to the header when you reach its scroll position. Remove "sticky" when you leave the scroll position
          function myFunction() {
            if (window.pageYOffset > sticky) {
                header.classList.add("sticky");
            } else {
                header.classList.remove("sticky");
            }
            if(window.scrollY >= 700) { 
                hopperImg.style.display = "none";
                catImg.style.display = "none";
                spiderImg.style.display = "block";
                ladyImg.style.display = "block";
                
            } else {
                spiderImg.style.display = "none"
                catImg.style.display = "block";
                hopperImg.style.display = "block";
                ladyImg.style.display = "none";
                
            }
          }
          
        });
    </script>

