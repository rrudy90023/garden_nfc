                <a href="/emails/join"><h3>Subscribe</h3></a>
                {{!-- <a href="mailto:rrudy90023@gmail.com"><h3>Contact</h3></a> --}}
              </div>
              <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
            </div>
            <script type="text/javascript">

                function openNav() {
                  document.getElementById("myNav").style.display = "block";
                  console.log("open");
                }

                /* Close */
                function closeNav() {
                  document.getElementById("myNav").style.display = "none";
                  console.log("close");
                }

            </script>

        {{/if}}

        {{#if intro}}
            <div class="introCopy">
                <div class="introParent">
                    <div>
                        <h1>ECO-</h1>
                    </div>
                    <div id="wordRotate">
                        <h1>INFORM</h1>
                    </div>
                </div>
            </div>
            <script type="text/javascript">
                var textSwap = document.getElementById("wordRotate");
                var introCont = document.querySelector(".introCopy");
                //var cookieVar = document.cookie;
                //console.log(document.cookie);

                function initAos() {
                    AOS.init({
                        once: true 
                    });
                };
                // intro copy change
                if ( document.cookie ){
                    introCont.style.display = "none";
                    initAos();
                } else {
                    setTimeout(function(){
                        textSwap.querySelector("h1").innerHTML = "PROTECT";
                    },1000);
                    setTimeout(function(){
                        textSwap.querySelector("h1").innerHTML = "FIRST";
                    },2000);
                    setTimeout(function(){
                        introCont.classList.add("intro-scale");
                        document.cookie = "visited=true";
                    },4000);
                    initAos();
                }
            </script>

        {{/if}}

        {{#if footer}}
        <footer class="row">
          <div class="col-12">
            <div class="footCopy">
              <h3 class="">S17 ©MMXIX</h3>
              <h3 class="" id="instaBtn">Instagram: @s17.la</h3>
              <h3 id="youTubeCh">YouTube Channel</h3>
