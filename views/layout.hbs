    <script type="text/javascript">
        document.addEventListener("DOMContentLoaded", function() {
          //sticky header
          window.onscroll = function() {myFunction()};
          // Get the header
          var header = document.getElementById("myHeader");
          // Get the offset position of the navbar
          var sticky = header.offsetTop;
          // Add the sticky class to the header when you reach its scroll position. Remove "sticky" when you leave the scroll position
          function myFunction() {
            if (window.pageYOffset > sticky) {
              header.classList.add("sticky");
            } else {
              header.classList.remove("sticky");
            }
          }


          AOS.init();
        });
    </script>

    <body class="container-fluid">
        <div id="page">

            {{#if firstName}}
            <div id="greeting" class="row head">
            	<h3>s17</h3><h1 class="rtSpacer">Hi, {{firstName}}!</h1>
            	<a href="/users/logout" class="btn btn-link linkcolor">Log out</a>
                <a href="/plants/create" class="btn btn-link linkcolor">Add plant</a>
            </div>
            {{/if}}		

				<!-- BEGIN page-specific content -->
				{{{body}}}		
				<!-- END page-specific content -->
								

        </div>
        {{#if nav}}
            <div class="header nav" id="myHeader">
                <ul>
                  <li><a href="javascript:void(0);" onclick="openNav()" class="burger">â˜°</a></li>
                </ul>
            </div>
            <!-- open/close -->
            <!-- The overlay -->
            <div id="myNav" class="overlay">

              <!-- Button to close the overlay navigation -->
              <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>

              <!-- Overlay content -->
              <div class="overlay-content">
                <a href="javascript:void(0)"><h3>Inhabitants</h3></a>
                <a href="javascript:void(0)"><h3>Initiate</h3></a>
                <a href="javascript:void(0)"><h3>Contact</h3></a>
              </div>

            </div>

            <div class="introCopy">
                <div>
                    <h1>ECO-</h1>
                </div>
                <div id="wordRotate">
                    <h1>INFORM</h1>
                </div>
            </div>

            <script type="text/javascript">

                var textSwap = document.getElementById("wordRotate");
                var introCont = document.querySelector(".introCopy");

                setTimeout(function(){
                    textSwap.querySelector("h1").innerHTML = "PROTECT";
                },1000);
                setTimeout(function(){
                    textSwap.querySelector("h1").innerHTML = "FIRST";
                },2000);
                setTimeout(function(){
                    introCont.classList.add("intro-scale");
                },4000);

                /* Open */
                function openNav() {
                  document.getElementById("myNav").style.display = "block";
                  console.log("open");
                }

                /* Close */
                function closeNav() {
                  document.getElementById("myNav").style.display = "none";
                  console.log("close");
                }

                var initBtn = document.getElementById("initiateBtn");
                var ourInHabit = document.getElementById("inhabitBtn");

                function handleInhabits(evt) {
                  evt.preventDefault();
                  window.open("/inhabitants", '_self');
                  console.log('our friends');
                }
                ourInHabit.addEventListener('touchstart', handleInhabits);
                ourInHabit.addEventListener('click', handleInhabits);

                function handleInit(evt) {
                  evt.preventDefault();
                  window.open("emails/join", '_self');
                  console.log('join us');
                }
                initBtn.addEventListener('touchstart', handleInit);
                initBtn.addEventListener('click', handleInit);         

            </script>

        {{/if}} 


