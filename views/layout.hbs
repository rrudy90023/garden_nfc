				<!-- BEGIN page-specific content -->
				{{{body}}}		
				<!-- END page-specific content -->
								

        </div>
        {{#if nav}}
            <div class="header nav" id="myHeader">
                <a href="/"><div class="fasLogo"></div></a>
                <ul>
                  <li><a href="javascript:void(0);" onclick="openNav()" class="burger">☰</a></li>
                </ul>
            </div>
            <!-- open/close -->
            <!-- The overlay -->
            <div id="myNav" class="overlay">

              <!-- Button to close the overlay navigation -->
              

              <!-- Overlay content -->
              <div class="overlay-content">
 {{!--                <a href="#"><h3>Story</h3></a> --}}
                <a href="/Inhabitants"><h3>Inhabitants</h3></a>
                <a href="/formation"><h3>Formation</h3></a>
