
	<h2>Edit {{this.vrid}}<h2>

	<form class="col-xs-12 col-md-8" name="create-gallery-form" id="create-gallery-form" method="post">
		<div class="form-group">
			<label for="galleryName">Gallery name</label>
			<input type="text" id="galleryName" name="galleryName" class="form-control" required value="{{this.galleryName}}"/>
		</div>
		<div class="form-group">
			<label for="address">Address</label>
			<input type="text" id="address" name="address" class="form-control"required value="{{this.address}}"/>
		</div>

		<div class="form-group">
			<label for="city">City</label>
			<input type="text" id="city" name="city" class="form-control"equired value="{{this.city}}"/>
		</div>

		<div class="form-group">
			<label for="state">State</label>
			<input type="text" id="state" name="state" class="form-control"required value="{{this.state}}"/>
		</div>

		<div class="form-group">
			<label for="zipcode">Zipcode</label>
			<input type="text" id="zipcode" name="zipcode" class="form-control"required value="{{this.zipcode}}"/>
		</div>

		<div class="form-group">
			<label for="vrid">VR id name</label>
			<input type="text" id="vrid" name="vrid" class="form-control"required value="{{this.vrid}}"/>
		</div>


		<a href="http://rudes.de/vr/index.html?image=examples/pano/{{this.vrid}}_4096.jpg&is_stereo=true&preview=examples/pano/{{this.vrid}}_2048.jpg" class="spacer btn btn-lg btn-default btn-block">View VR</a>


		<div class="form-submit">
			<input type="submit" class="btn btn-lg btn-danger btn-block spacer" value="Save Changes" />
		</div>
		<span style="color:red">{{error}}</span>
	</form>

	<form class="col-xs-12 col-md-8"  name="create-gallery-form" id="create-gallery-form" method="post" action="{{this.id}}?method=delete">
		<div class="form-submit">
			<input type="submit" class="btn btn-lg btn-danger btn-block" name="delete" value="Delete gallery" />
		</div>
	</form>

