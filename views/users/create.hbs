<h1 class="topSpace"style="text-align: center; font-size: 2.6em; color: white;">Create account</h1>
<form class="form-signin" name="create-user-form" id="create-user-form" method="post">
	<div class="form-group">
		<input type="text" id="firstName" name="firstName" placeholder="First name" class="form-control" required value="{{input.firstName}}"/>
	</div>
	<div class="form-group">
		<input type="text" id="lastName" name="lastName" placeholder="Last name" class="form-control" required value="{{input.lastName}}"/>
	</div>
	<div class="form-group">
		<input type="email" id="email" name="email" placeholder="Email" class="form-control" required value="{{input.email}}"/>
	</div>
	<div class="form-group">
		<input type="password" id="password" name="password" placeholder="Create password" class="form-control" autocomplete="off" minlength="6"
       maxlength="6" size="6" required value="{{input.password}}"/>
	</div>
	<div class="form-submit">
		<input type="submit" class="btn btn-lg btn-block spacer" value="Create my account" />
	</div>
	<span style="color:red">{{error}}</span>
</form>
