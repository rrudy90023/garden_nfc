
<form class="col-xs-12 col-md-8" name="create-gallery-form" id="create-gallery-form" enctype="multipart/form-data" method="POST">	

	<h1>Edit</h1>
	<div class="addy">
		<a href="/plants" class="iconLink">
		<div>
			<i class="material-icons md-36">home</i>
		</div>
		</a>
		<div>
			<h4>></h4>
		</div>
		<div>
			<h4 class="cookieCrumb">{{this.plantname}}</h4>
		</div>
		<a href="/plants/{{this.id}}/view" class="editViewLink">
		<div>
			<i class="material-icons md-36">pageview</i>
		</div>
		</a>
	</div>
	<div class="form-group">
		<label for="plantname">Plant name</label>
		<input type="text" id="plantname" name="plantname" class="form-control" required value="{{this.plantname}}"/>
	</div>
	<div class="form-group">
		<label for="specs">Specification</label>
		<input type="text" id="specs" name="specs" class="form-control" required value="{{this.specs}}"/>
	</div>
	<div class="form-group">
		<label for="desc">Description</label>
		{{!-- <input type="text" id="desc" name="desc" class="form-control" required value="{{this.desc}}"/> --}}
		<textarea class="form-control" id="exampleFormControlTextarea1" rows="13" id="desc" name="desc" required class="form-control">{{this.desc}}</textarea>
	</div>



	<div class="form-group">
		<label for="dateplanted"><i class="material-icons md-36 editIcons">calendar_today</i>Date planted</label>
		<input type="date" id="dateplanted" name="dateplanted" class="form-control" required value="{{this.dateplanted}}"/>
	</div>

	<div class="form-group">
		<label for="imageurl"><i class="material-icons md-36 editIcons">add_a_photo</i>Image</label>
		<input type="file" id="imageurl" name="file" class="form-control" value="{{this.file}}"/>
	</div>


	<div class="form-submit">
		<input type="submit" class="btn btn-lg btn-block spacer" value="Save Changes" />
	</div>
	<span style="color:red">{{error}}</span>
</form>			

<form class="col-xs-12 col-md-8" method="POST" action="?method=DELETE">
	{{#if this.file}}
		<img src="{{this.file}}" class="img-thumbnail">
		<input class="btn btn-lg btn-danger btn-block mt-4" type="submit" value="Delete Image" />
	{{else}}
		<h3>Upload an image</h3>
	{{/if}}
	
</form>
