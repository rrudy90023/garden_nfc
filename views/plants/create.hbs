
	<h2>Add plant<h2>

	<form class="col-xs-12 col-md-8" name="create-gallery-form" id="create-gallery-form" method="post">
		<div class="form-group">
			<label for="plantname">Plant name</label>
			<input type="text" id="plantname" name="plantname" class="form-control" required value="{{input.plantname}}"/>
		</div>
		<div class="form-group">
			<label for="imageurl">Image</label>
			<input type="text" id="imageurl" name="imageurl" class="form-control" required value="{{input.imageurl}}"/>
		</div>

		<div class="form-group">
			<label for="desc">Description</label>
			<input type="text" id="desc" name="desc" class="form-control" required value="{{input.desc}}"/>
		</div>

		<div class="form-group">
			<label for="specs">Specification</label>
			<input type="text" id="specs" name="specs" class="form-control" required value="{{input.specs}}"/>
		</div>

		<div class="form-group">
			<label for="dateplanted">Date planted</label>
			<input type="text" id="dateplanted" name="dateplanted" class="form-control" required value="{{input.dateplanted}}"/>
		</div>

