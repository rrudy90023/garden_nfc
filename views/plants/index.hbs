<div class="adminContainer">
	<h2>Current Inventory</h2>
	{{#each plantlist}}
	<h5>{{this.plantname}}</h5>
		<div class="addy">
				<div>
				<a href="/plants/{{this.id}}/edit" class="btn btn-default btn-lg btn">Edit</a>
				</div>
				<div>
				<a href="/plants/{{this.id}}/view" class="btn btn-default btn-lg btn">View</a>
				</div>
				<div>
				<form method="POST" action="plants/{{this.id}}?method=DELETE">
						<input class="btn btn-default btn-lg btn-danger btn" type="submit" name="delete" value="Delete" />
				</form>
				</div>
		</div>
	{{/each}}
</div>

